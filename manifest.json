{
  "manifest_version": 3,
  "name": "TimeTwister",
  "version": "1.0.0",
  "description": "Timezone override for selected websites",
  "author": "Bekshanskiy",
  "permissions": ["storage", "tabs", "debugger", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "pages/popup.html",
    "default_title": "TimeTwister - Timezone Control for selected websites",
    "default_icon": {
      "16": "icons/icon-16_blue.png",
      "32": "icons/icon-32_blue.png",
      "48": "icons/icon-48_blue.png",
      "128": "icons/icon-128_blue.png"
    }
  },
  "options_page": "pages/options.html",
  "icons": {
    "16": "icons/icon-16_blue.png",
    "32": "icons/icon-32_blue.png",
    "48": "icons/icon-48_blue.png",
    "128": "icons/icon-128_blue.png"
  }
}